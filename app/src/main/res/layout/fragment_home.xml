<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_home_fragment"
    android:layout_marginTop="@dimen/margin"
    tools:context=".ui.home.HomeFragment">

    <data>

        <variable
            name="viewModel"
            type="com.example.cmpt370_9mare.ui.home.HomeViewModel" />

        <variable
            name="homeFragment"
            type="com.example.cmpt370_9mare.ui.home.HomeFragment" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:id="@+id/today_event_card_view_categories"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="60dp"
                android:background="@color/teal_700">

                <TextView
                    android:id="@+id/today_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_regular"
                    android:text="@string/today_event"
                    android:textSize="20sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/today_text_view"
                    android:layout_alignParentBottom="true"
                    android:background="#00000000"
                    android:padding="15dp"
                    android:text="Click me" />

                <ImageView
                    android:id="@+id/today_event_icon"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/image_today" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/next_event_card_view_categories"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/today_event_card_view_categories"
                android:layout_marginTop="60dp"
                android:background="@color/material_dynamic_neutral40">

                <TextView
                    android:id="@+id/next_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_regular"
                    android:text="@string/Next_event"
                    android:textSize="35sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/next_text_view"
                    android:layout_alignParentBottom="true"
                    android:background="#00000000"
                    android:padding="15dp"
                    android:text="Click me" />

                <ImageView
                    android:id="@+id/next_event_icon"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/image_today" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/notify_event_card_view_categories"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/next_event_card_view_categories"
                android:layout_marginTop="60dp"
                android:background="@color/material_dynamic_primary70">

                <TextView
                    android:id="@+id/notify_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_regular"
                    android:text="@string/Notification"
                    android:textSize="35sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/notify_text_view"
                    android:layout_alignParentBottom="true"
                    android:background="#00000000"
                    android:padding="15dp"
                    android:text="Click me" />

                <ImageView
                    android:id="@+id/notify_event_icon"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/image_today" />
            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_list_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/notify_event_card_view_categories"
                android:focusable="true"
                android:padding="16dp"
                app:layoutManager="LinearLayoutManager"
                tools:listitem="@layout/event_view" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

